<h1><%=@attraction.name%></h1>

<%=@attraction.name%><br>
Tickets: <%=@attraction.tickets%><br>
Nausea Rating: <%=@attraction.nausea_rating%><br>
Min Height: <%=@attraction.min_height%><br>
<br>
<%=form_for @ride, {:action => "post"} do |form|%>
  <%=form.hidden_field :user_id, value: "#{@user.id}"%>
  <%=form.hidden_field :attraction_id, value: "#{@attraction.id}"%>
  <%=form.submit value: "Go on this ride"%>
<%end%>

<%=link_to "Edit Attraction", edit_attraction_path(@attraction)%>

