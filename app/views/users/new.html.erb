<h1>New User Signup</h1>

<%= form_for @user do |user_builder| %>
    <p>
    <%= user_builder.label :name %>
    <%= user_builder.text_field :name %>
    </p>

    <p>
    <%= user_builder.label :password %>
    <%= user_builder.password_field :password %>
    </p>

    <p>
    <%= user_builder.label :admin %>
    <%= user_builder.check_box :admin %>
    </p>

    <p>
    <%= user_builder.label :height %>
    <%= user_builder.text_field :height %>
    </p>

    <p>
    <%= user_builder.label :happiness %>
    <%= user_builder.text_field :happiness %>
    </p>

    <p>
    <%= user_builder.label :nausea %>
    <%= user_builder.text_field :nausea %>
    </p>

    <p>
    <%= user_builder.label :tickets %>
    <%= user_builder.text_field :tickets %>
    </p>

    <p>
    <%= user_builder.label :mood %>
    <%= user_builder.text_field :mood %>
    </p>

    <%= user_builder.submit 'Create User'%>

<% end %>
